#!/bin/bash

if [ -s ~/chef_code/django/django_installed]
then
 echo 'django is installed'
else
 echo 'installing django database'
 "PYTHONPATH=/usr/lib/python2.6/site-packages /usr/lib/python2.6/site-packages/django/bin/django-admin.py syncdb --settings=graphite.settings --noinput > ~/chef_code/django/django_installed_execute
 cat ~/chef_code/django/django_installed_execute | grep installed > ~/chef_code/django/django_installed
fi
